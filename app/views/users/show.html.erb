<div class="body">
	<div class="green">
	<%=   flash[:destroyed]  %><!-- 削除成功メッセージ -->
	</div>
	<div class="container">
		<p id="notice"></p>
		<div class="row">

			<div class="col-xs-3">
				<h2>User info</h2>
				<img src="/no_image.jpg" alt="No image"><table class="table">
					<tbody><tr></tr>
						<tr>
							<th>name</th>
							<th><%= @user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= @user.introduction %></th>
						</tr>
					</tbody>
				</table>



				<div class="row">
					<a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench" href="/users/167/edit"></a>
				</div>
				<h2>New book</h2>
				<%= form_for(@book) do |f| %>
					<div class="field row">
						<label for="book_title">Title</label>
						<%= f.text_field :title, class: "col-xs-12" %>
					</div>


					<div class="field row">
						<label for="book_opinion">Opinion</label>
						<%= f.text_area :body, class: "col-xs-12" %>
					</div>


					<div class="actions row">
						<%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
					</div>
				</form>
				<% end %>
			</div>

			<div class="col-xs-9">
				<h2>Books</h2>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
							<th colspan="3"></th>
						</tr>
					</thead>

					<tbody>
						<% @user.books.each do |book| %>
						<tr>
							<td><a href="/users/167">
								<img src="/no-image-icon.jpg" alt="No image icon">
								</a>
							</td>
							<td><a href="/books/229"><%= book.title %></a></td>
							<td><%= book.body %></td>
						</tr>
						<% end %>
					</tbody>
    			</table>
  			</div>
  		</div>
     </div>
</div>
