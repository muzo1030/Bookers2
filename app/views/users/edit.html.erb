<div class="body">
	<div class="container">
		<p id="notice"></p>
		<h2>User info</h2>

		<% if @user.errors.any? %>
		    <h2><%= @user.errors.count %>件のエラーがあります。</h2>
		    <ul>
		    <% @user.errors.full_messages.each do |msg| %>
		      <li><%= msg %></li>
		    <% end %>
		    </ul>
		<% end %>

		<%= form_for(@user) do |f| %>
			<div class="field">
				<label for="user_name">Name</label>
					<%= f.text_field :name%>
			</div>
			<div class="field">
				<label for="user_image">Image</label>
						<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
			</div>
			<div class="field">
				<label for="user_introduction">Introduction</label>
					<%= f.text_area :introduction%>
			</div>
			<div class="actions">
				<%= f.submit 'Update User' %>
			</div>

		<% end %>

	</div>
</div>