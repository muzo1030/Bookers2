<!DOCTYPE html>
<html>
	<head>
		<title>Bookers</title>
    	<%= csrf_meta_tags %>

    	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	</head>

	<body>
  	<header class="navbar navbar-fixed-top navbar-inverse">
  		<div class="container">
  			<nav class="nav2 navbar-nav navbar-left">
  				<span class="glyphicon glyphicon-book">Bookers</span>
  			</nav>
  			<nav>
  				<ul class="nav navbar-nav navbar-right">
  					<% if user_signed_in? %>
              <li><%=link_to ' Home', user_path(current_user.id), class: "glyphicon glyphicon-home" %></li>
          		<li><a class="glyphicon glyphicon-user" href="/users"> Users</a></li>
          		<li><a class="glyphicon glyphicon-book" href="/books"> Books</a></li>
          		<li><%= link_to "logout", destroy_user_session_path, class: "glyphicon glyphicon-log-out", method: :delete %></li>
          	<% else %>
              <li><a class="glyphicon glyphicon-home" href="/"> Home</a></li>
          				<li><a class="glyphicon glyphicon-link" href="/about"> About</a></li>
          				<li><%= link_to " sign up", new_user_registration_path, class: "glyphicon glyphicon-edit"%></li>
          				<li><%= link_to " login", new_user_session_path, class: "glyphicon glyphicon-log-in"%></li>
            <% end %>
          		</ul>
    		</nav>
  		</div>
	</header>

	<%= yield %>

	<footer>
		<div class="container">
			<div class="row">
				<div class="col-xs-3 col-xs-offset-9">
					<p>CopyRight @murozono</p>
				</div>
			</div>
		</div>
	</footer>

	</body>
</html>
