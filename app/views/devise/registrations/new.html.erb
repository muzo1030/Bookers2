<div class="body">
  <div class="container">
    <p id="notice"></p>

    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

      <div class="field ">
        <label for="user_name">Name</label><br>
        <%= f.text_field :name, autofocus: true, id:"inputName" %>
      </div>

      <div class="field">
        <label for="user_email">Email</label><br>
        <%= f.email_field :email, id: "inputEmail" %>
      </div>

      <div class="field">
        <label for="user_password">Password</label>
        <em>(6 characters minimum)</em>
        <br>
        <%= f.password_field :password, autocomplete: "off", id:"inputPassword" %>
      </div>

      <div class="field">
        <label for="user_password_confirmation">Password confirmation</label><br>
        <%= f.password_field :password_confirmation, autocomplete: "off", id:"inputConfirmPassword" %>
      </div>

      <%= f.submit "Sign up", class: "btn btn-success actions" %>

    <% end %>

    <a href="/users/sign_in">Log in</a><br>

  </div>
</div>
